<div class="container">
  <h1>All Ideas</h1>

  <% for (let idea of ideas){%>
  <div class="card mb-3">
    <div class="row">
      <div class="col-md-8">
        <div class="card-body">
          <h5 class="card-title"><%= idea.title %></h5>

          <p class="card-text"><%= idea.description %></p>
          <p class="card-text">
            <small class="text-muted"><%= idea.location%></small>
          </p>
          <a class="btn btn-primary" href="/ideas/<%=idea._id%>"
            >View <%=idea.title%></a
          >
        </div>
      </div>
    </div>
  </div>
  <% }%>
</div>
