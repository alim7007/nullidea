<% layout('layouts/boilerplate')%>
<!-- <div id="cluster-map" style="width: 100%; height: 500px"></div> -->
<div class="container">
  <h1>All Posts</h1>

  <% for (let post of posts){%>
  <div class="card mb-3">
    <div class="row">
      <div class="col-md-8">
        <div class="card-body">
          <h5 class="card-title"><%= post.title %></h5>

          <p class="card-text"><%= post.description %></p>
          <p class="card-text">
            <small class="text-muted"><%= post.location%></small>
          </p>
          <a class="btn btn-primary" href="/posts/<%=post._id%>"
            >View <%=post.title%></a
          >
        </div>
      </div>
    </div>
  </div>
  <% }%>
</div>
<script>
  const mapToken = '<%-process.env.MAPBOX_TOKEN%>';
